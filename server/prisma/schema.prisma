generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity{
  id  Int @id @default(autoincrement())
  category String
  startedAt DateTime @default(now()) @db.Timestamptz(3)
  finishedAt DateTime?
  duration Int
  durationWithOvertime Int?
  successful Boolean?
}

